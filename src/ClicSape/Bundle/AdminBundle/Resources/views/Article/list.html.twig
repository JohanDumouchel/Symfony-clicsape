{% extends "ClicSapeAdminBundle::Layout/base_admin.html.twig" %}

{% block title %}ClicSapeAdminBundle:Article:list{% endblock %}

{% block h1 %}
    <h2 class='col-lg-7 col-lg-offset-1'>Welcome to the Article:list page</h2>
    <div class='col-lg-2 col-lg-offset-1'>
        {{button.addEntity('article_add')}}
    </div>
{% endblock %}

{% block searchBar %}
{% endblock %}

{% block body %}
    <table class="table table-hover">
        {% set articleClass = getClassInArray(listArt) %}
        {% set articleUrl = 'article_list' %}
        <thead>
            <tr>
                <th>id {{button.filter(articleUrl, articleClass,'id')}}</th>
                <th>titre {{button.filter(articleUrl, articleClass,'title')}}</th>
                <th>description {{button.filter(articleUrl, articleClass,'description')}}</th>
                <th>categories {{button.filterSelect(articleUrl, articleClass,'Category')}}</th>
                <th>genre {{button.filterSelect(articleUrl, articleClass,'Gender')}}</th>
                <th>photos</th>
                <th>action</th>
            </tr>
        </thead>
        {% include "ClicSapeAdminBundle:Article:list_content.html.twig" %}
    </table>
{% endblock %}
{% block javascripts %}
        <script src="{{ asset('js/admin/article.js') }}"></script>
{% endblock %}