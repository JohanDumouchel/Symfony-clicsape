{# empty Twig template #}
{% macro edit(rout,id) %}
    <a class="btn btn-primary" href="{{path(rout, {'id':id})}}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
    </a>
{% endmacro %}

{% macro delete(entity,id) %}
    <button  id="delete" 
             type="button" 
             class="btn btn-danger" 
             data-entity="{{entity}}_{{id}}">
        <span class="glyphicon glyphicon-remove" 
              aria-hidden="true"></span>
    </button>
{% endmacro %}

{% macro addEntity(rout)%}
    <a class="btn btn-info" 
       href="{{path(rout)}}">
                <span class="glyphicon glyphicon-plus-sign" 
                      aria-hidden="true" ></span>
    </a>
{% endmacro%}

{% macro headerTab() %}
    <button type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
    </button>
{% endmacro %}

{% macro filter(url,class,filter) %}
<input name="class" data-url="{{path(url)}}" data-class="{{class}}" data-filter="{{filter}}" hidden/>
<button class="btn btn-default" id="filter">
    <span class="glyphicon glyphicon-search"></span>
</button>
{% endmacro %}