{% extends "::admin/base_admin.html.twig" %}

{% block title %}ClicSapeAdminBundle:Country:list{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class='row'>
        <h2 class='col-lg-7 col-lg-offset-1'>Welcome to the Country:list page</h2>  
        <a class="btn btn-info col-lg-1 col-lg-offset-1  " href="{{path('country_add') }}">
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true" ></span>
        </a>
    </div>
    <div class='row'>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>id</th>
                    <th>code</th>
                    <th>libell√©</th>
                    <th>monnaie</th>
                    <th>symbole</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
            {% for country in listCountry  %}
                <tr>
                    <td>{{country.id}}</td>
                    <td>{{country.code}}</td>
                    <td>{{country.wording}}</td>
                    <td>{{country.money}}</td>
                    <td>{{country.symbol}}</td>
                    <td>
                        <a class="btn btn-primary" href="{{path('country_edit', {'id': country.id}) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
                        </a>
                        <button  id="delete" type="button" class="btn btn-danger" data-entity="country_{{country.id}}">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>
</div>  
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin/country/country.js') }}"></script>
{% endblock %}
