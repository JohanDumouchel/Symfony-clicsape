{% extends "::admin/base_admin.html.twig" %}

{% block title %}ClicSapeAdminBundle:GroupSize:list{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class='row'>
            <h2 class='col-lg-7 col-lg-offset-1'>Welcome to the GroupSize:list page</h2>
            <div class='col-lg-2 col-lg-offset-1'>
                {{button.addEntity('groupsize_add')}}
            </div>
    </div>
    <div class='row'>
        {% if listGroupSize is not null %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>titre</th>
                        <th>désactivé</th>
                        <th>tailles</th>
                        <th>pays</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                {% for groupSize in listGroupSize  %}
                    <tr>
                        <td>{{groupSize.id}}</td>
                        <td>{{groupSize.title}}</td>
                        <td>{{groupSize.disabled}}</td>
                        <td>
                            {% for size in groupSize.sizes %}
                                {{size.wording}}<br/>
                            {% endfor %}
                        </td>
                        <td>
                            {% for country in groupSize.countries %}
                                {{country.wording}}<br/>
                            {% endfor %}
                        </td>
                        <td>
                            {{button.edit('groupsize_edit',groupSize.id)}}
                            {{button.delete('groupsize',groupSize.id)}}
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
        </table>
        {% endif %}
    </div>
</div>
{% endblock %}
