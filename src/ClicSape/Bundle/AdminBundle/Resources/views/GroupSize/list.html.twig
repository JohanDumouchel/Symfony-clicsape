{% extends "::admin/base_admin.html.twig" %}

{% block title %}ClicSapeAdminBundle:GroupSize:list{% endblock %}

{% block body %}
<h1>Welcome to the GroupSize:list page</h1>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>titre</th>
                <th>désactivé</th>
                <th>tailles</th>
                <th>pays</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for groupSize in listGroupSize  %}
            <tr>
                <td>{{groupSize.id}}</td>
                <td>{{groupSize.title}}</td>
                <td>{{groupSize.disabled}}</td>
                <td>
                    {% for size in groupSize.sizes %}
                        {{size.wording}}<br/>
                    {% endfor %}
                </td>
                <td>
                    {% for country in groupSize.countries %}
                        {{country.wording}}<br/>
                    {% endfor %}
                </td>
                <td>
                    <button type="button" class="btn btn-primary" >
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger" >
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
