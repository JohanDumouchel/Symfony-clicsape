{# Admin base Twig template #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/home.css') }}"/>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('js/javascript.js') }}"></script>
        {#<script src="{{ asset('js/admin.js') }}"></script>#}
    </head>
    <body>
        <div class="container-fluid">
        {% block nav %}        
        <nav class="navbar navbar-default col-xs-12 col-sm-12 col-md-12 col-lg-12" >
            <div class="navbar-header">
            <button class="navbar-toggle collapsed" 
                    type="button" 
                    data-toggle="collapse" 
                    data-target="#navbar" 
                    aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            </div>
            <div class="collapse navbar-collapse" aria-expanded="false" id="navbar">
                <ul class="nav navbar-nav">
                    <li class="dropdown"> 
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" 
                       role="button" aria-haspopup="true" aria-expanded="false">
                        Like it
                        <span class="glyphicon glyphicon-thumbs-up"> </span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="btn btn-social-icon btn-twitter">
                                <i class="fa fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-social-icon btn-facebook">
                                <i class="fa fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-social-icon btn-instagram">
                                <i class="fa fa-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a class="btn btn-social-icon btn-pinterest">
                                <i class="fa fa-pinterest"></i>
                            </a>
                        </li>
                    </ul>
                    </li>
                </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <button class="btn btn-default btn-login">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                    </button>
                </li>
                <li>
                    <button class="btn btn-default btn-cart">
                        <span class="glyphicon glyphicon-user"></span>
                    </button>
                </li>
            </ul>
        </div>
        </nav>
        <div class="row">
                <h1 class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">Example page header <small>Subtext for header</small></h1>
        </div>
        {% endblock %}
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
            {% block menu %}
            {% endblock %}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
            {% block carousel %}
            {% endblock %}
            </div>
        </div>
        </div>
    </body>
</html>